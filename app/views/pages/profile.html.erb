<div class="container">
  <div class="row justify-content-center">
      <div  class="col-12">
        <h1> my profile </h1>
        <div>
          <h2> username </h2>
          <%= @user.user_name %>
        </div>
        <div class= "avatar">
          <% if @user.photo.attached? %>
                <%= cl_image_tag @user.photo.key, class:"profile" %>
          <% end %>
        </div>
        <%= button_to "Log out", destroy_user_session_path, method: :delete %>
      </div>
  </div>
</div>
