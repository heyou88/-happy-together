<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <form novalidate="novalidate" class="simple_form search_offers_form" action="/" accept-charset="UTF-8" method="get">
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search.."/>
        </div>
      </form>
      <% @offers.each do |offer| %>
      <%= link_to offer_path(offer) , class:"link" do %>
        <div class="card-product">
          <img class="main-card-img", src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="card-product-infos">
            <strong><%= offer.title %></strong>
            <%= image_tag "cat_img.png", class: "cat_img"%>
            <div class="booking_date">
               <%= offer.start_date%>
               <%= offer.end_date %>
            </div>
          </div>
        </div>
        <% end %>
       <% end %>
    </div>
  </div>
    <div class="row justify-content-center">
      <div class="col-8S">
      <%#= link_to "create offer", new_offer_path, class: "btn btn-main"%>
    </div>
  </div>
</div>
